[general]
mode = viewer
size = 640,360
position = auto
sigusr1 = reload
sigusr2 = next_file
app_id = swayimg

[font]
name = SourceCodePro
size = 14
color = #FFFFFF
shadow = #000000

[list]
order = alpha
recursive = no
all = yes
fsmon = yes

[info]
show = no
info_timeout = 0
status_timeout = 0

[viewer]
window = #111111
transparency = #111111

scale = optimal
position = center
antialiasing = mks13
loop = yes
history = 1
preload = 1

[info.viewer]
top_left = +name,+format,+filesize,+imagesize,+exif
top_right = index
bottom_left = scale,frame
bottom_right = status

[keys.viewer]
Return = mode gallery
s = mode slideshow
q = exit

m = info

g = first_file
Shift+g = last_file

Shift+n = prev_file
n = next_file

p = next_dir

comma = prev_frame
period = next_frame

c = skip_file
Shift+z = rand_file; exec notify-send -r 107 -u low "swayimg" "Shuffled"

Shift+r = reload
Shift+a = antialiasing

Space = animation

h = step_left 10
j = step_down 10
k = step_up 10
l = step_right 10

Shift+h = step_left 1
Shift+j = step_down 1
Shift+k = step_up 1
Shift+l = step_right 1

i = zoom +10
o = zoom -10

z = zoom real
w = zoom width
a = zoom fit
f = zoom fill

r = rotate_right
Shift+r=rotate_left

v = flip_vertical
Shift+v = flip_horizontal

Ctrl+c = exec sh -c "wl-copy < '%'"

